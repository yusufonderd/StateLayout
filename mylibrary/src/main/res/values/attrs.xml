<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ErrorStateLayoutView">

      <!-- State Error Case -->
      <attr name="textErrorTitle" format="string" />
      <attr name="textErrorDetail" format="string" />
      <attr name="textErrorButtonTryAgain" format="string" />
      <attr name="errorDrawable" format="reference" />

      <!-- State Loading Case -->
      <attr name="textLoading" format="string" />
      <attr name="loadingGravity" format="enum">
        <enum name="center" value="0"/>
        <enum name="top" value="1"/>
        <enum name="bottom" value="2"/>
      </attr>

      <!-- State Empty Case -->
      <attr name="textEmpty" format="string" />
      <attr name="emptyIconDrawable" format="reference" />

      <!-- Spacing between state layout views -->
      <attr name="defaultMargin" format="integer" />

    </declare-styleable>

</resources>